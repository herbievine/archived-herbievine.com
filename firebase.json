{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
    },
    "hosting": [
        {
            "target": "production",
            "public": "dist",
            "rewrites": [
                {
                    "source": "**/!(*.css|*.js|*.map|*.jpg|*.gif|*.png|*.php)",
                    "destination": "/index.html"
                }
            ],
            "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
        },
        {
            "target": "testing",
            "public": "dist",
            "rewrites": [
                {
                    "source": "**/!(*.css|*.js|*.map|*.jpg|*.gif|*.png|*.php)",
                    "destination": "/index.html"
                }
            ],
                "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
        }
    ],
    "storage": {
        "rules": "storage.rules"
    }
}
